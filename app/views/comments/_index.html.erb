<ul>
  <% comments.each do |comment| %>
    <% unless comment.id.nil? %>
      <li>
        <%= link_to user_path(comment.user) do %>
        <p><strong><%= comment.user.name %>さんがコメントしました。</strong></p>
        <% end %>
        <p class="left"><%= comment.content %></p>
        <% if current_user.id == comment.user.id %>
          <p class="right">
            <%= link_to '編集', edit_wine_comment_path(wine, comment), class: "fa fa-pencil-square-o fa-lg" %>
            <%= link_to '消去', wine_comment_path(wine, comment), class: "fa fa-trash-o fa-lg", method: :delete, remote: true, data: { confirm: '本当に削除していいですか？' } %>
          </p>
        <% end %>
      </li>
    <% end %>
  <% end %>
</ul>