<div class="container">
<div id="wrapper">
  
  <div class="topImg">
    <img src="<%= asset_path "Lvino_topIMG.png" %>">
  </div><!-- topImg -->
  


<div class="login_01  col-md-4 col-md-offset-4 col-sm-10">
  <h2>Login</h2>

  <p id="loginText">さぁ、自分だけのワインセラーを作るたびに出かけよう</p>
  
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "メールアドレス"  %>
  </div>

  <div class="field">
    <%= f.label :パスワード %><br />
    <%= f.password_field :password, autocomplete: "off",class: "form-control", placeholder: "パスワード" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :ログイン情報を記憶する？ %>
    </div>
    
  <% end -%><!-- devise_mapping -->

  <div class="actions">
    <%= f.submit "Go!", class: "btn btn-primary btn-block"  %>
  </div>

<% end %><!-- form for -->


<div class="googleBtn btn btn-danger btn-block">
  <p>Google</p>
</div>

<p class="loginText_01"><%= link_to "登録がまだの方はこちら",new_user_registration_path%><br>
<%= link_to "Googleでもログインできるよ",new_user_registration_path%></p>
</div><!-- login_01 -->
</div><!-- wrapper -->
</div><!-- container -->