<div class="container">
<div id="container">
  <div class="row">
  <div class="topImg ">
    <img src="<%= asset_path "Lvino_topIMG.png" %>">
  </div><!-- topImg -->
  </div><!-- row -->
  
<div class="container">
    <div class="row">
        <div class="login_01 col-md-4 col-md-offset-4 col-sm-10">
          <h2>ログイン</h2>
        
          <p id="loginText">さぁ、自分だけのワインセラーを作るたびに出かけよう</p>
          
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.label :メールアドレス %><br />
            <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "メールアドレス"  %>
          </div>
        
          <div class="field">
            <%= f.label :パスワード %><br />
            <%= f.password_field :password, autocomplete: "off",class: "form-control", placeholder: "パスワード" %>
          </div><!-- field -->
        
          <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :ログイン情報を記憶する？ %>
            </div><!-- field -->
            
          <% end -%><!-- devise_mapping -->
        
          <div class="actions">
            <%= f.submit "Go!", class: "btn btn-primary btn-block"  %>
          </div>
        
        <% end %><!-- form for -->
        
        
        
        <p class="loginText_01"><%= link_to "登録がまだの方はこちら",new_user_registration_path%><br></p>
        
        </div><!-- login_01 -->
  </div><!-- row -->
</div><!-- container -->
</div><!-- #container -->
</div><!-- container -->

