<div class="container">
<div class="wrapper col-md-4 col-md-offset-4 col-sm-10">


<h3>パスワードをお忘れですか?</h3>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control", placeholder: "メールアドレス"  %>
  </div>

  <div class="actions">
    <%= f.submit "パスワード変更を申請する", class: "btn btn-primary btn-block" "btn btn-primary btn-sm" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>
</div>